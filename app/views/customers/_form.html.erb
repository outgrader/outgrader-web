<%= form_for(@customer, as: :customer) do |f|  %>


    <div class = "field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class = "field">
      <%= f.label :contact %><br>
      <%= f.text_field :contact %>
    </div>
    <div class = "field">
      <%= f.label :phone %><br>
      <%= f.text_field :phone %>
    </div>
    <div class = "field">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </div>
    <div class = "field">
      <%= f.label :address %><br>
      <%= f.text_field :address%>
    </div>
    <div class = "field">
      <%= f.label :balance %><br>
      <%= f.text_field :balance %>
